<project name="AnimalProject" default="compile">

	<property name="src" value="src"/>
	<property name="build" value="build"/>
	
	<path id="class.path">
		<fileset dir="${build}"/>
	</path>
	
	<target name="clear">
		<delete dir="${build}"/>
		<mkdir dir="${build}"/>
	</target>
	
	<target name="compile" depends="clear">
		<javac srcdir="${src}" destdir="${build}">
			<classpath refid="class.path"/>
		</javac>
	</target>
	
	<target name="exec">
		<java classname="test.Exec" classpath="${build}"/>
	</target>
	
</project>
